module Hittable;

import Vec3;
import Ray;

// import all hittable objects
import Sphere;

type HitRecord = struct { p : Point3, normal : Vec3, t : F64, front_face : Bool };

trait a : Hittable {
    hit : F64 -> F64 -> Ray -> a -> Option HitRecord;
}

type HittableObject = union { sphere : Sphere, hittable_list : Array HittableObject };